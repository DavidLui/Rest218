

<div class="container-fluid" style="background:#E6E6E6;">
    <div class="container-fluid" style="margin-top: -0px;">
      <div class="page-header">
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
      <% end %>

     <% if user_signed_in? %>
          <p color="black";><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-default btn-lg" %></p>
          <div class="container" style="background:green;">
          <h1>Listing pins</h1>

          <center>
          <table>
            <thead>
              <tr>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @pins.each do |pin| %>
                <tr>
                  <td><%= image_tag pin.image.url(:medium) %></td>
                  <td><%= pin.name %></td>
                  <td><%= pin.foodtype %></td>
                  <td><%= link_to 'Show', pin %></td>
                  <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
                  <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </center>
          <br>

          <%= link_to 'New Pin', new_pin_path %>
          </div>
     <% else %>
       <p>
         <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
         <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
       </p>
      <% end %>  

      <div class="jumbotron">
          <h1>MENU</h1>
      </jumbotron>
      </div>

      <% @pins.each do |pin| %>
              
                <div class="jumbotron" style="margin-top: -20px;">  
                <!-- <span class="mw-headline" id=<% pin.foodtype %>><p style="margin-top: -30px;"><h1><%= pin.foodtype %></h1></p><hr></span> -->
                <td><%= image_tag pin.image.url(:medium) %></td>
                  <h1><%= content_tag :span, pin.name, class: 'mw-headline', id: pin.foodtype %></h1><hr>
                </jumbotron>
                
                <div class="row">
                  <% pin.foodtype.singularize.titleize.constantize.all.each do |type| %>

                    <div class="col-lg-4 col-md-4 col-sm-6">
                      <div class="thumbnail" style="background-color: rgba(0,0,0,.0);border-width: 4px; border-style:solid;border-color: #E0E0D1;">
                        <img src="http://theculinarycook.com/wp-content/uploads/2012/04/types-of-soup.jpg" alt="Generic placeholder thumbnail"><hr>
                        
                        <p><font size="4"><%= type.name %></font></p>
                        <p style="font-size:150%;color:#5CE62E;"><%= type.price %></p>
                          
                      </div>
                    </div>
                 
                  <% end %>
                </div>
               
               </div>
      <% end %>


</div><!-- /.container -->

  </div>
