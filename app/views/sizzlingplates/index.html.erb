<h1>Listing sizzlingplates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sizzlingplates.each do |sizzlingplate| %>
      <tr>
        <td><%= sizzlingplate.name %></td>
        <td><%= sizzlingplate.price %></td>
        <td><%= sizzlingplate.img %></td>
        <td><%= link_to 'Show', sizzlingplate %></td>
        <td><%= link_to 'Edit', edit_sizzlingplate_path(sizzlingplate) %></td>
        <td><%= link_to 'Destroy', sizzlingplate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

